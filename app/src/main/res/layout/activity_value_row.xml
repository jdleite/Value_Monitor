<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:clickable="true"
    android:orientation="vertical"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/valueBackground">


        <ImageView
            android:id="@+id/id_img_close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="380dp"
            android:src="@drawable/close" />

        <TextView
            android:id="@+id/id_txt_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="40sp"
            android:textColor="@color/valueColor"
            android:textStyle="bold"
            tools:text="Segunda-feira" />

        <TextView
            android:id="@+id/id_txt_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:layout_marginTop="60dp"
            android:textColor="@color/valueColor"
            tools:text="R$ 100,00" />

        <TextView
            android:id="@+id/id_txt_hour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="95dp"
            android:gravity="bottom|left"
            android:textSize="30sp"
            android:textColor="@color/valueColor"
            tools:text="10:30" />

        <TextView
            android:id="@+id/id_txt_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="130dp"
            android:gravity="bottom|left"
            android:textSize="30sp"
            android:textColor="@color/valueColor"
            tools:text="23/08/1986" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>